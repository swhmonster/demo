<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>
<configuration>
  <property>
    <name>hbase.rootdir</name>
    <!-- petabase <value>hdfs://172.16.30.250:9000/hbase</value> -->
    <!-- <value>hdfs://172.16.2.66:9000/hbase</value> -->
    <value>hdfs://master:8020/hbase</value>
  </property>
  <property>
    <name>hbase.cluster.distributed</name>
    <value>true</value>
  </property>
  <property>
    <name>hbase.rpc.timeout</name>
    <value>120000</value>
  </property>
  <property>
    <name>zookeeper.session.timeout</name>
    <value>60000</value>
  </property>
  <property>
    <name>zookeeper.znode.parent</name>
    <value>/hbase</value>
  </property>
  <property>
    <name>zookeeper.znode.rootserver</name>
    <value>root-region-server</value>
  </property>
  <property>
    <name>hbase.zookeeper.quorum</name>
     <value>master</value> 
   <!--  <value>172.16.2.66</value> -->
  </property>
  <property>
    <name>hbase.zookeeper.property.clientPort</name>
    <value>2181</value>
  </property>
  <property>
    <name>hbase.hconnection.threads.max</name>
    <value>256</value>
  </property>
  <property>
    <name>hbase.hconnection.threads.core</name>
    <value>256</value>
  </property>
  <property>
    <!-- the timeunit is second -->
    <name>hbase.hconnection.threads.keepalivetime</name>
    <value>60</value>
  </property>
  <property>
    <!-- the real task queue size is hbase.hconnection.threads.max * hbase.client.max.total.tasks -->
    <name>hbase.client.max.total.tasks</name>
    <value>100</value>
  </property>
</configuration>
