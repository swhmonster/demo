<?xml version="1.0" encoding="UTF-8" ?>
<configuration debug="false">
    <contextName>import09xml</contextName> 
	<appender name="FILE"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<File>../../logs/stdlog.log</File>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<FileNamePattern>../../logs/stdlog.%d{yyyy-MM-dd}-%i.log</FileNamePattern>
			<MaxHistory>20</MaxHistory>
			<TimeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
			    <MaxFileSize>500MB</MaxFileSize>
			</TimeBasedFileNamingAndTriggeringPolicy>
		</rollingPolicy>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%-5level] [%-5thread] %logger{20} - %msg%n</pattern>
        </encoder>
	</appender>
	<appender name="FILE-ERROR"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
	       <level>WARN</level>
	    </filter>
		<File>../../logs/errlog.log</File>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<FileNamePattern>../../logs/errlog.%d{yyyy-MM-dd}-%i.log</FileNamePattern>
			<MaxHistory>20</MaxHistory>
			<TimeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
			    <MaxFileSize>500MB</MaxFileSize>
			</TimeBasedFileNamingAndTriggeringPolicy>
		</rollingPolicy>
		<encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
			<pattern>%d{yyyy-MM-dd HH:mm:ss} [%-5level] [%-5thread] %logger{20} - %msg%n</pattern>
		</encoder>
	</appender>


	<logger name="com.thunisoft" additivity="false">
		<level value="info" />
		<appender-ref ref="FILE" />
        <!-- 错误日志单独输出，用于排查不能正常入库的数据文件 -->
		<appender-ref ref="FILE-ERROR" />
	</logger>
	
	<root>
		<level value="warn" />
		<appender-ref ref="FILE" />
	</root>
</configuration>